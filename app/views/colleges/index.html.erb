<h1>All Colleges</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @colleges.each do |college| %>
      <tr>
        <td><%= college.name %></td>
        <td><%= link_to 'Show', college %></td>
        <td>
          <% if can? :update, college %> 
          <%= link_to 'Edit', edit_college_path(college) %>
          <% end %> 
        </td>
        <td>
          <% if can? :destroy, college %> 
          <%= link_to 'Destroy', college, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, College %> 
  <%= link_to 'New College', new_college_path %>
<% end %>

