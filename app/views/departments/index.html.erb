<h1>All Departments</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.number %></td>
        <td><%= link_to 'Show', department %></td>
        <td>
          <% if can? :update, department %> 
          <%= link_to 'Edit', edit_department_path(department) %>
          <% end %> 
        </td>
        <td>
          <% if can? :destroy, department %> 
          <%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Department %> 
  <%= link_to 'New Department', new_department_path %>
<% end %> 
